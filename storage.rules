
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Rule for user-specific attachments.
    // The path is /attachments/{userId}/{allPaths=**}
    match /attachments/{userId}/{allPaths=**} {
      // Allow reading files; this is needed for the browser's initial check (preflight OPTIONS request).
      allow read;

      // Allow writing (upload, update, delete) only if the user is authenticated
      // AND their UID matches the {userId} in the path. This ensures users can only
      // write to their own folder.
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
