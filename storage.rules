rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // ATENÇÃO: Regras simplificadas para depuração.
    // Isso permite que qualquer usuário logado leia e escreva em qualquer lugar.
    // Devemos restaurar regras mais seguras após a correção.
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
