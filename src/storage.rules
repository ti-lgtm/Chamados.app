rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Regra para a pasta de anexos
    match /attachments/{userId}/{allPaths=**} {
      // Permite que qualquer pessoa leia. Isso é necessário para que a verificação
      // de preflight (OPTIONS) do navegador passe, pois ela é feita sem autenticação.
      // A segurança dos arquivos ainda é garantida pelas regras do Firestore que
      // controlam o acesso aos documentos que contêm os URLs dos anexos.
      allow read;

      // Permite que um usuário autenticado crie (faça upload) ou exclua
      // apenas na sua própria pasta.
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
