rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Regra para a pasta de anexos
    match /attachments/{userId}/{allPaths=**} {
      // Permite a leitura pública. Isso é essencial para que a verificação
      // de preflight (OPTIONS) do navegador passe, pois ela é feita sem autenticação.
      // A segurança real do acesso aos arquivos para os usuários é garantida
      // pelas regras do Firestore, que controlam quem pode ver os URLs dos anexos.
      allow read;

      // Permite que um usuário autenticado crie (upload), atualize ou exclua
      // arquivos apenas em sua própria pasta.
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
